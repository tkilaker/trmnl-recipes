{% comment %}
Sydsvenskan News - Half Horizontal Layout
Compact layout for horizontal split-screen
{% endcomment %}

<div class="view view--half_horizontal">
  <div class="layout">

    {% comment %} Title Bar {% endcomment %}
    <div class="title-bar">
      <h1 class="title-bar__title">Sydsvenskan</h1>
      <span class="title-bar__subtitle">{{ "now" | date: "%H:%M" }}</span>
    </div>

    {% comment %} Get configuration - max 6 items for horizontal half {% endcomment %}
    {% assign news_limit = 6 %}
    {% assign latest_feed = data[0] %}

    {% comment %} News List - Compact with 1-line truncation {% endcomment %}
    {% if latest_feed.channel.item %}
      <div class="list" data-list-limit="true">
        {% assign items = latest_feed.channel.item | slice: 0, news_limit %}
        {% for item in items %}
          <div class="item item--compact">
            <div class="item__body">
              <div class="item__title clamp clamp--1">
                {{ item.title | strip_html }}
              </div>
              <div class="description text--sm text--gray-3">
                {{ item.pubDate | date: "%H:%M" }}
              </div>
            </div>
          </div>
        {% endfor %}
      </div>
    {% else %}
      <div class="text--sm text--gray-3">Inga nyheter tillg√§ngliga</div>
    {% endif %}

  </div>
</div>
